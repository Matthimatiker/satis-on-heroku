{
    "name": "{{ env.SATIS_NAME }}",
    "homepage": "{{ (env.SATIS_URL is empty and env.HEROKU_APP_NAME is defined) ? 'https://' ~ env.HEROKU_APP_NAME ~ '.herokuapp.com' : env.SATIS_URL }}",
    "output-dir": "web",
    "require-all": true,
    "repositories": [
        {% for repository in repositories %}
            {
                "type": "vcs",
                "url": "{{ repository }}"
            }
            {% if not loop.last %}
                ,
            {% endif %}
        {% endfor %}
    ]
}
